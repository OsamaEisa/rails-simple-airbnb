<h3 class='text-center m-3'>Flat details</h3>
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @flat.name %></h5>
    <p class="card-text">
      <strong>Address:</strong> <%= @flat.address %><br>
      <strong>Description:</strong> <%= @flat.description %>
    </p>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <strong>Price per night:</strong> <%= @flat.price_per_night %>
      </li>
      <li class="list-group-item">
        <strong>Number of guests:</strong> <%= @flat.number_of_guests %>
      </li>
    </ul>
    <div class="card-footer text-muted">
       <%= link_to "Edit", edit_flat_path(@flat), class: "btn btn-success" %>
       <%= link_to "Delete", flat_path(@flat), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
  </div>
</div>

<%= link_to "Back to all flats", flats_path, class: "btn btn-secondary mt-3" %>
